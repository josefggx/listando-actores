<ul>
  <% @actors.each do |actor| %>
    <li>
      <article>
        <img src="<%= actor.image_url %>" alt="Actor photo">
        <h1><%= actor.name %></h1>
        <p><%= actor.bio %></p>
        <span><%= actor.birth_date %></span>
        <span><%= actor.birth_place %></span>
        <% unless actor.alive %>
        <p>Death date: <%=  actor.death_date  %></p>
        <p>Death place: <%= actor.death_place %></p>
        <% end %>
      </article>
    </li>
  <% end %>
</ul>